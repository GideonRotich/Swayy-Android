<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/giddy</item>
        <item name="colorPrimaryDark">@color/giddy</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
    </style>


    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>




    <style name="AppTheme.ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="titleTextStyle">@style/AppTheme.Toolbar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.Toolbar" />

    <style name="AppTheme.Toolbar.TitleTextStyle" parent="Theme.AppCompat.Light">

        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.NoBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <style name="AppTheme.SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.TranslucentStatus" parent="AppTheme.NoBar">

    </style>

    <style name="AppTheme.Text" />

    <style name="AppTheme.Text.18PrimaryBold">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.18Primary">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.Text.14Primary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.Text.14PrimaryBold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.14Secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="AppTheme.Text.14SecondaryBold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.14Accent">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Text.14AccentBold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.16AccentBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.12Secondary">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="AppTheme.Button" />

    <style name="AppTheme.Button.FilledAccent" parent="Widget.MaterialComponents.Button">

    </style>

    <style name="AppTheme.Button.OutlinedAccent" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <item name="rippleColor">#0064D2</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="AppTheme.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">

    </style>

    <style name="AppTheme.Button.Danger" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorDanger</item>
        <item name="android:textColor">@color/colorDanger</item>
        <item name="rippleColor">#40E53E3E</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="AppTheme.InputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>

    <style name="AppTheme.InputField.OnDark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">#60FFFFFF</item>
        <item name="passwordToggleTint">#FFFFFF</item>
    </style>

</resources>