<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".privateFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/ni"
                android:background="#000000">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/shine"
                    android:scaleType="centerCrop"
                    android:background="@color/giddy"
                    android:elevation="4dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/mbeyar"
                        android:layout_marginRight="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:tint="#ffffff"
                        android:src="@drawable/ic_baseline_share_24">

                    </ImageView>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/mbeyaz"
                        android:layout_marginRight="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:tint="#ffffff"
                        android:visibility="gone"
                        android:src="@drawable/ic_settings">

                    </ImageView>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/mbeyam"
                        android:layout_marginLeft="16dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:tint="#ffffff"
                        android:src="@drawable/ic_baseline_arrow_back_24">

                    </ImageView>
                </RelativeLayout>


            </RelativeLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="50dp"
                android:id="@+id/dpyao"
                android:src="@drawable/twoo"
                android:elevation="2dp"
                android:layout_marginLeft="20dp">
            </de.hdodenhof.circleimageview.CircleImageView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="110dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ali"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:id="@+id/ajedo"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:textSize="22sp"
                            android:textColor="#000000">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Posts"
                            android:textColor="#333333"
                            android:id="@+id/ajedno"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/ajedo"
                            android:textSize="12sp"
                            >

                        </TextView>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/aliha"
                        android:layout_marginLeft="30dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/ajedma"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:textSize="22sp"
                            android:textColor="#000000">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Followers"
                            android:textColor="#333333"
                            android:id="@+id/ajednom"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/ajedma"
                            android:textSize="12sp"
                            >

                        </TextView>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/aliham"
                        android:layout_marginLeft="30dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/ajedmma"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:textSize="22sp"
                            android:textColor="#000000">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Following"
                            android:textColor="#333333"
                            android:id="@+id/ajednomm"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/ajedmma"
                            android:textSize="12sp"
                            >

                        </TextView>

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/dpyao"
                android:layout_marginTop="20dp"
                android:id="@+id/jeje"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ps"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mamayaoa"
                        android:text="John doe"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp">

                    </TextView>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mamayaoa"
                        android:id="@+id/kambili"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            android:textSize="16sp"
                            android:id="@+id/webkamoja"
                            android:textColor="#000000"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chantilly, VA"
                            android:id="@+id/webmeka"
                            android:textSize="16sp"
                            android:layout_marginStart="40dp"
                            android:textColor="#000000"
                            android:layout_marginLeft="10dp"
                            >

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/kambili"
                        android:id="@+id/kadodo"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Member since"
                            android:textSize="16sp"
                            android:id="@+id/webkamojas"
                            android:textColor="#000000"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chantilly, VA"
                            android:id="@+id/webmeks"
                            android:textSize="16sp"
                            android:layout_marginStart="20dp"
                            android:textColor="#000000"
                            android:layout_marginLeft="1dp"
                            >

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/kadodo"
                        android:id="@+id/kanne"
                        android:layout_marginTop="10dp"
                        >
                        <Button
                            android:id="@+id/faizaa"
                            android:backgroundTint="@color/giddy"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="10dp"
                            android:text="Follow"
                            android:textAllCaps="false"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp" />
                        <Button
                            android:id="@+id/faidooa"
                            android:backgroundTint="#3DA62A"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:layout_toRightOf="@id/fai"
                            android:layout_marginEnd="20dp"
                            android:text="Message"
                            android:textAllCaps="false"
                            android:textColor="#ffffff"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="10dp" />


                    </LinearLayout>


                    <View
                        android:id="@+id/kampww"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="18dp"
                        android:alpha=".12"
                        android:background="#000"
                        android:layout_below="@+id/kanne" />

                </RelativeLayout>
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmerFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_below="@+id/ps"
                    android:visibility="gone"
                    android:layout_marginBottom="59dp"
                    android:orientation="vertical">

                    <!-- Adding 15 rows of placeholders -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include layout="@layout/shimmer_placeholder_layout" />
                        <include layout="@layout/shimmer_placeholder_layout" />
                        <include layout="@layout/shimmer_placeholder_layout" />




                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_sasap"
                    android:layout_width="match_parent"
                    android:scrollbars="none"
                    android:layout_below="@+id/ps"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginBottom="10dp">

                </androidx.recyclerview.widget.RecyclerView>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>