<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.chatActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:id="@+id/mbappe"
        android:elevation="2dp"
        android:background="#ffffff">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/yes"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/opt"
                    android:layout_height="22dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="14dp"
                    android:tint="#000000"
                    android:layout_centerVertical="true"
                    android:backgroundTint="#000000"
                    >

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat settings"
                    android:layout_toRightOf="@id/opt"
                    android:layout_marginLeft="14dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/giddy"
                    android:textSize="18sp">

                </TextView>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mbappe"
        android:background="@color/cardi">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            android:elevation="4dp"
            android:layout_marginLeft="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Chats"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:id="@+id/mbp"
                android:layout_marginBottom="20dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginLeft="10dp">

            </TextView>
            <View
                android:id="@+id/view33"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha=".1"
                android:background="#000"
                android:layout_below="@+id/mbp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receive messages"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:id="@+id/mbpi"
                android:layout_below="@id/view33"
                android:layout_marginBottom="20dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginLeft="10dp">

            </TextView>
            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_below="@id/view33"
                android:checked="true">


            </androidx.appcompat.widget.SwitchCompat>
            <View
                android:id="@+id/view44"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha=".1"
                android:background="#000"
                android:layout_below="@+id/mbpi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view44"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                android:text="Chats help you customers to get in touch with you though messages on Swayy platform\n \n You can turn off this option if you don't want to reply to the messages (Your existed chats stay active">

            </TextView>
        </RelativeLayout>

    </RelativeLayout>




</RelativeLayout>