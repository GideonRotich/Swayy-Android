<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F3F3F3"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_margin="4dp"
        android:elevation="2dp"
        android:background="#ffffff">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:id="@+id/diame"
            android:scaleType="centerCrop"
            android:background="#ffffff">
        </ImageView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ghafla"
                android:text="HP refurbished"
                android:maxLines="1"
                android:fontFamily="@font/uber_move_bold"
                android:textSize="14sp"
                android:textColor="#000000">

            </TextView>

        </RelativeLayout>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="140dp"

            android:layout_below="@id/diatext"
            android:id="@+id/messi"
            android:src="@drawable/ic_baseline_location_on_24">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/diatext"
            android:layout_marginTop="146dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/messi"
            android:layout_marginRight="4dp"
            android:id="@+id/mie"
            android:text="Nairobi"
            android:fontFamily="@font/uber_move"
            android:textSize="12sp"
            android:textColor="#000000">

        </TextView>


    </androidx.cardview.widget.CardView>

</RelativeLayout>