<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F3F3F3"
    android:layout_height="match_parent"
    tools:context=".stores.storesActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:id="@+id/mbappe"
        android:background="#000000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/yes"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post New Ad"
                android:textSize="18sp"
                android:layout_marginLeft="30dp"

                android:textColor="#ffffff"
                android:layout_marginTop="8dp"
                >

            </TextView>
        </RelativeLayout>


    </RelativeLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mbappe"
        android:layout_marginTop="20dp"
        android:layout_marginRight="14dp"
        android:id="@+id/marcos"
        android:background="#ffffff"
        android:layout_marginLeft="14dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Store Details"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/kib">


        </TextView>
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="18dp"
            android:alpha=".12"
            android:background="#000"
            android:layout_below="@+id/kib" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mwendo"
            style="@style/AppTheme.InputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_below="@id/view3"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:hint="Company title">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mwendoname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/kimbia"
            style="@style/AppTheme.InputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_below="@id/mwendo"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:hint="Company description">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/kimbianame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textLongMessage"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/web"
            style="@style/AppTheme.InputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_below="@id/kimbia"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:hint="Website(optional)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/webname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sasa"
            style="@style/AppTheme.InputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_below="@id/web"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:hint="Location">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sasaname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/marcos"
        android:layout_marginTop="20dp"
        android:layout_marginRight="14dp"
        android:background="#ffffff"
        android:layout_marginLeft="14dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload your Business Logo"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/kibla">


        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A business logo strengthens your online brand recognition"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/kibla"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/kiblar">

        </TextView>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/plus"
            app:civ_border_width="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/kiblar"
            android:id="@+id/profile_image_settingsdogsyotename"
            >

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image_settingsdogsyotename"
            android:id="@+id/change_image_dogsyotenum"
            android:layout_marginLeft="24dp"
            android:text="Add Image"
            android:textSize="14sp"
            android:textColor="@android:color/black">

        </TextView>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/postfarmdogsyotenum"
            android:backgroundTint="#000000"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/change_image_dogsyotenum"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:text="Post Store" />






    </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>